            "number": {
                "type": "integer",
                "format": "int32",
                "description": "what number was rolled (2-12)",
                "minimum": 2,
                "maximum": 12
            }
        }
    },
    "SendChat":{
        "id":"SendChat",
        "required":["type","playerIndex","content"],
